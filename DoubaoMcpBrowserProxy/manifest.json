{
  "manifest_version": 3,
  "name": "DoubaoMcpBrowserProxy",
  "version": "1.3",
  "description": "Enhances Doubao functionality",
  "permissions": [
    "cookies",
    "webNavigation",
    "storage",
    "debugger"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://*.doubao.com/*",
    "https://doubao.com/*",
    "http://*.doubao.com/*",
    "http://doubao.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "id": "doubao-enhancer",
      "matches": ["https://www.doubao.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "icons": {
    "48": "icon-48.png",
    "128": "icon-128.png"
  }
} 